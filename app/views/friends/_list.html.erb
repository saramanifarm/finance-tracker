<div class="row">
    <div class="col-9">
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                <th scope="col">Email</th>
                    <th scope="col">Full Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                <% @friends.each do |f|  %>
                    <tr>
                        <td><%= f.email %></td>
                        <td><%= f.full_name %></td>
                        <td><%= link_to 'View Profile', user_path(f), class: "btn btn-sm btn-success" %>
                            <%= link_to 'Stop following', delete_friend_path(user_id: f.id), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-sm btn-warning" %>
                            </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
</div>